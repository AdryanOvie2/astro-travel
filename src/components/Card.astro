---
import Link from './Link.astro'
const { link, title, description, time, src, alt } = Astro.props
---

<div class="card">
    <header>
        <img src={src} alt={alt}>
        <div class="container-link">
            <a class="link" href=#>Leer m√°s</a>
        </div>
    </header>
    <div class="content">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
    <footer>
        <p class="time">{time}</p>
    </footer>
</div>

<style>
    .card{
        position: relative;
        box-shadow: 0 0 50px lightgray;
        flex-basis: 50%;

        & .content{
            display: flex;
            flex-direction: column;
            gap: 1rem;

            & h3{
                font-size: 1.5rem
            }
        }

        & .container-link{
            width: 100%;
            display: flex;
            justify-content: center;
        }

        & footer{
            width: 100%;
            padding: 1.5rem 0;
            display: flex;
            justify-content: center;
            align-items: center;
            border-top: 1px solid lightgray;
        }
    }
    img{
        background: linear-gradient(to bottom, rgba(0, 0, 0, .7), rgba(0, 0, 0, 0)),url('../assets/pexels-christine-renard-615060.jpg');
		background-size: cover;
		background-position: top;
		border-bottom-left-radius: 40% 8%;
		border-bottom-right-radius: 40% 8%;
        object-fit: cover;
        width: 100%;
        aspect-ratio: 4/3;
    }
    .content{
        padding: 1rem;
        text-align: center;
    }
    .link{
        background-color: var(--orange);
        color: white;
        display: inline-block;
        padding: .7rem 1.2rem;
        border-radius: 5px;
        margin-top: -1.5rem;
    }
</style>