---
const { textBack, textFront } = Astro.props;
---
<div class="text-back-container">
    <p class="text-back">{textBack}</p>
    <h2 class="text-front">{textFront}</h2>
</div>

<style>
    .text-back-container{
		position: relative;
		width: 100%;
		height: 10rem;

		& .text-back{
			letter-spacing: -5px;
			color: white;
			text-align: center;
			text-transform: uppercase;
			font-size: 7rem;
			font-weight: 700;
			text-shadow: 0 0 10px lightgray;

			position: absolute;
			display: flex;
			justify-content: center;
			align-items: center;
			width: 100%;
			height: 100%;
		}

		& .text-front{
			position: absolute;
			display: flex;
			justify-content: center;
			align-items: center;
			width: 100%;
			height: 100%;
			font-size: 2.3rem;
			text-transform: uppercase;
		}
	}
</style>