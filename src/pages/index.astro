---
import Layout from '../layout/HomePage.astro'
---

<Layout title="Homepage">
	<section class="curved"></section>
</Layout>

<style>
	.curved {
		position: relative;
		background-image: url('https://images.pexels.com/photos/1188470/pexels-photo-1188470.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
		background-color: rgba(0, 0, 0, 0.9);
		background-size: cover;
		background-position: center;
		box-shadow: 1px 1px 50px gray;
		height: 80dvh;
		border-bottom-left-radius: 40% 8%;
		border-bottom-right-radius: 40% 8%;
		
		&::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: linear-gradient(to bottom, rgba(0, 0, 0, .7), rgba(0, 0, 0, 0));
			z-index: 1; /* Colocar el pseudo-elemento detr√°s del contenido */
		}
	}
</style>